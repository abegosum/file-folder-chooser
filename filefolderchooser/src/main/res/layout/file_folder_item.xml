<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <CheckBox
        android:id="@+id/chkFileSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/lblFileFolderName"
        android:layout_toEndOf="@id/chkFileSelected"
        android:layout_alignParentTop="true"
        style="@style/file_folder_heading"
        android:text="Name"
        />
    <TextView
        android:id="@+id/lblFileFolderDetails"
        style="@style/file_folder_subheading"
        android:layout_below="@id/lblFileFolderName"
        android:layout_toEndOf="@id/chkFileSelected"
        android:text="Details"
        />

</RelativeLayout>